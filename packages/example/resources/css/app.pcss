input,
select {
  @apply h-10 relative w-full cursor-default px-3 py-2 text-left !outline-0 sm:text-sm;
  @apply transition-all duration-300;
  @apply text-gray-900 border border-gray-300 bg-white shadow-sm rounded-md;
  @apply placeholder-gray-500;
  @apply focus:border-indigo-500 focus:outline-none focus:ring-1 focus:ring-indigo-500 focus:z-10;
  @apply invalid:border-red-500 invalid:ring-1 invalid:ring-red-500;
}
